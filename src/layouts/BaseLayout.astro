---
import '../styles/global.css'; 
import '../styles/reset.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="" href="" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<!-- google font -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
	</head>
	<body class="body">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style lang="scss">
	@use '../styles/common/vars.scss' as *;  
	@use '../styles/common/mixin.scss' as *;

	.body {
		color: var(--main);
		background-color: var(--bg);
		font-family: var(--base-font);
		@include mq-pc {
			font-size: var(--text-lg);
		}
	}

	img {
		width: 100%;
		height: auto;
	}

	/* Title */
	:global(.titleA) {
		line-height: 1;
		font-weight: 500;
		font-family: var(--sub-font);
		padding-bottom: var(--space-16);
		position: relative;
		@include mq-pc {
			font-size: var(--text-3xl);
		}
		&::after {
			content: "";
			position: absolute;
			width: 100%;
			height: 2px;
			bottom: 0;
			left: 0;
			background-color: var(--main);
		}
	}
	:global(.titleA.-noUnderLine) {
		&::after {
			display: none;
		}
	}
	:global(.titleA + *) {
		@include mq-pc {
			margin-top: var(--space-64);
		}
	}

	:global(.titleB) {
		font-weight: 500;
		font-family: var(--sub-font);
		@include mq-pc {
			font-size: var(--text-xl);
		}
	}
	:global(* + .titleB) {
		@include mq-pc {
			margin-top: var(--space-40);
		}
	}
	:global(.titleB + *) {
		@include mq-pc {
			margin-top: var(--space-16);
		}
	}

	/* List */
	:global(.ulList > li) {
		display: flex;
		align-items: center;
		gap: 0 var(--space-8);
	}
	:global(.ulList > li:not(:first-of-type)) {
		margin-top: var(--space-8);
	}
	:global(.ulList > li::before) {
		content: "";
		width: .5rem;
		height: .5rem;
		background-color: var(--main);
		border-radius: 50%;
	}
</style>
