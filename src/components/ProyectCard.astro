        display: flex;
        flex-wrap: wrap;
        gap: var(--space-16);
        margin-top: var(--space-24);
        @include mq-pc {
        }

        li {
            color: var(--main);
            line-height: 1;
            font-weight: 500;
            border: 2px solid var(--sub);
            border-radius: 2rem;
            background-color: #ECF5FF;
            padding: var(--space-6) var(--space-16);
            @include mq-pc {
                font-size: var(--text-base);
            }
