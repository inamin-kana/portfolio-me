    .card {
        position: relative;
        z-index: 1;
        @include mq-pc {
            width: calc(100% - #{var(--space-80)} / 2);
        }
        &::after {
            content: "";
            width: 100%;
            height: 100%;
            background-color: var(--main);
            border-radius: 2rem;
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            z-index: -1;
        }
    }
    .card__link {
        height: 100%;
        background-color: #fff;
        display: block;
        overflow: hidden;
        border-radius: 2rem;
        border: 2px solid var(--main);
        display: flex;
        flex-direction: column;
        @include mq-pc {
            padding: 24px;
        }
    }
    .card__body {
        @include mq-pc {
            padding: var(--space-16) var(--space-16) 0;
        }
    }
