---
import Nav from '../components/Nav.astro'
---

<header class="header">
    <div class="header__inner">
        <a href="/" class="header__logo">
            <span class="header__logoIcon">
                <img 
                src="/assets/icon_me.png"
                alt=""
                >
            </span>
            <span class="header__logoName">Kanako Inamine</span>
        </a>

        <div id="menuButton" class="menuButton">
            <span class="menuButton__icon"></span>
        </div>

        <div class="menuContents">
            <Nav />
        </div>

    </div>
</header>

<script>
        if (typeof window !== 'undefined') {
        window.addEventListener('DOMContentLoaded', () => {
            const menuButton = document.getElementById('menuButton');
            const body = document.querySelector('body');
    
            menuButton?.addEventListener('click', () => {
            body?.classList.toggle('-menuOpen');
            });
    
            const anchorLinks = document.querySelectorAll('.anchorList__link');
            anchorLinks.forEach(link => {
            link.addEventListener('click', () => {
                body?.classList.remove('-menuOpen');
            });
            });
        });
        }
</script>

<style lang="scss">
    @use '../styles/common/vars.scss' as *;  
	@use '../styles/common/mixin.scss' as *;

    .header {
        width: 100%;
        background-color: #fff;
        border-bottom: solid 2px var(--main);
        z-index: 100;
        @include mq-sp {
            position: fixed;
            height: fit-content;
        }
    }
    .header__inner {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
        @include mq-pc {
            padding: var(--space-16) var(--space-40);
        }
        @include mq-sp {
            padding: var(--space-16) var(--space-16);
        }
    }
    .header__logo {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0 var(--space-8);
        position: relative;
        z-index: 101;
    }
    .header__logoIcon {
        display: inline-block;
        width: 2.5rem;
    }
    .header__logoName {
        font-size: var(--text-lg);
        font-family: var(--sub-font);
        font-weight: 500;
    }

    .menuButton {
        @include mq-sp {
            position: absolute;
            top: 0;
            bottom: 0;
            margin: auto 0;
            right: 20px;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 30px;
            height: 13px;
            z-index: 101;
        }
    }
    .menuButton__icon {
        @include mq-sp{
            display: block;
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            margin: 0 auto;
            width: 23px;
            
            &::before,
            &::after{
            background-color: var(--main);
            content: '';
            display: block;
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            width:23px;
            height: 2px;
            border-radius: 7px;
            transition: all .25s;
            }
            &::before{
                top: 0px;
            }
            &::after{
                top: 10px;
            }
        }   
    }
    :global(.body.-menuOpen .menuButton__icon::before) {
        top: 0;
        transform: rotate(-45deg);
    }
    :global(.body.-menuOpen .menuButton__icon::after) {
        top: 0;
        transform: rotate(45deg);
    }
    .menuContents {
        @include mq-sp {
            pointer-events: none;
            padding: var(--space-88) var(--space-32);
            position: absolute;
            top: 0;
            left: 0;
            background-color: #fff;
            width: 100vw;
            height: 100vh;
            opacity: 0;
            transition: opacity .15s;
        }
    }
    :global(.body.-menuOpen .menuContents) {
        pointer-events: all;
        opacity: 1;
    }
</style>
