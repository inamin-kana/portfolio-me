<div class="hero">
    <div class="hero__body">
        <h1 class="hero__title">Hello, my name is Kanako Inamine </h1>
        <p class="hero__lead">I am a Full Stack Developer with 3+ years of experience in Front End. Based in Barcelona. </p>
    </div>
    <div class="hero__img">
        <img 
        src="/assets/img_mv.jpg"
        srcset="/assets/img_mv.jpg 1x,/assets/img_mv@2x.jpg 2x"
        alt="Kanako Inamine is looking at the camera in the mountain"
        >
    </div>
</div>

<style lang="scss">
    @use '../styles/common/vars.scss' as *;  
	@use '../styles/common/mixin.scss' as *;

    .hero {
        @include mq-pc {
            display: grid;
            grid-template-columns: 6.5fr 3.5fr;
            padding-inline: 3.5rem;
            align-items: center;
            gap: 3.75rem;
            margin: 0 -24px;
        }
    }
    .hero__title {
        color: var(--sub);
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: var(--main);
        font-weight: 600;
        font-family: var(--sub-font);
        line-height: 1.3;
        margin: 0;
        @include mq-pc {
            font-size: var(--text-5xl);
        }
        @include mq-sp {
            font-size: var(--text-3xl);
        }
    }
    .hero__lead {
        font-family: var(--sub-font);
        margin-top: 1rem;
        @include mq-pc {
            font-size: var(--text-xl);
        }
        @include mq-sp {
            font-size: var(--text-lg);
        }
    }
    .hero__img {
        max-width: 400px;
        position: relative;
        z-index: 1;
        @include mq-sp {
            width: calc(100% - 2rem);
            margin: var(--space-40) auto 0;
        }
        &::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #fff;
            border: 2px solid var(--main);
            top: 2rem;
            right: -2rem;
            z-index: -1;
            @include mq-sp {
                top: 1.5rem;
                right: -1.5rem;
            }
        }
        img {
            @include mq-pc {
                object-fit: cover;
                object-position: center;
            }
        }
    }
</style>