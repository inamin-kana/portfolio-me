<div class="hero">
    <div class="hero__body">
        <h1 class="hero__title">Hello, my name is Kanako Inamine </h1>
        <p class="hero__lead">I am a Full Stack Developer with 4 years of experience in Front End based in Barcelona, Spain. </p>
    </div>
    <div class="hero__img">
        <img 
        src="/public/assets/img_mv.jpg"
        srcset="/public/assets/img_mv.jpg 1x,/public/assets/img_mv@2x.jpg 2x"
        alt="Kanako Inamine is looking at the camera in the mountain"
        >
    </div>
</div>

<style lang="scss">
    @use '../styles/common/vars.scss' as *;  
	@use '../styles/common/mixin.scss' as *;

    .hero {
        @include mq-pc {
            display: grid;
            grid-template-columns: 6.5fr 3.5fr;
            padding-inline: 3.5rem;
            align-items: center;
            gap: 3.75rem;
        }
    }
    .hero__title {
        color: var(--sub);
        -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: var(--main);
        font-weight: 600;
        font-family: var(--sub-font);
        margin: 0;
        @include mq-pc {
            font-size: var(--text-5xl);
            line-height: 1.3;
        }
    }
    .hero__lead {
        font-family: var(--sub-font);
        @include mq-pc {
            margin-top: 1rem;
            font-size: var(--text-xl);
        }
    }
    .hero__img {
        position: relative;
        @include mq-pc {
            max-width: 400px;
        }
        z-index: 1;
        &::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #fff;
            border: 2px solid var(--main);
            top: 2rem;
            right: -2rem;
            z-index: -1;
        }
        img {
            @include mq-pc {
                object-fit: cover;
                object-position: center;
            }

        }
    }
</style>